<?xml version="1.0" encoding="UTF-8" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="100" translate="label">
            <label>Catalog</label>
            <tab>catalog</tab>
            <resource>Magento_Catalog::config_catalog</resource>
            <group id="pokemon_configuration" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Pokemon Configuration</label>
                <comment>Add configuration for Pokemon integration.</comment>
                <field id="enabled" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="api_url" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>API URL</label>
                    <comment>Enter the URL for the Pokemon API.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
